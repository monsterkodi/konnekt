#!/usr/bin/env bash

cd `dirname $0`/..

rm -rf js
konrad -q

cd coffee

cat vec.coffee quat.coffee pref.coffee snd.coffee grph.coffee glob.coffee lvls.coffee sprk.coffee dot.coffee bot.coffee line.coffee load.coffee menu.coffee main.coffee > ../js/min.coffee

cd ../js

mkdir min

coffee --no-header -c min.coffee 

../node_modules/.bin/babel-minify min.js -d . -o min/min.js
../node_modules/.bin/minify style.css > min/style.css
../node_modules/.bin/minify index.html > min/index.html

cd min
../../bin/advzip -apq4 ../konnekt.zip *
# zip -q ../konnekt.zip *
cd ..

~/s/colorls/bin/color-ls -lp konnekt.zip
