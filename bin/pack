#!/usr/bin/env bash

cd `dirname $0`/..

rm -rf js
konrad -q

cd coffee

cat vect.coffee quat.coffee glob.coffee dot.coffee bot.coffee line.coffee online.coffee > ../js/min.coffee

cd ../js

mkdir min

coffee --no-header -c min.coffee 

../node_modules/.bin/babel-minify min.js -d . -o min/min.js
# cp min.js min/min.js
../node_modules/.bin/minify style.css > min/style.css
../node_modules/.bin/minify index.html > min/index.html

cd min
zip -q ../online.zip *
cd ..

~/s/colorls/bin/color-ls -lp online.zip
