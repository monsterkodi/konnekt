
#main
    background      black
    position        absolute 
    left            0
    top             0
    right           0
    bottom          0
    padding         0
    margin          0
    overflow        hidden
    
svg
    width           100%
    height          100%
    stroke-width    10px
    stroke          white
    fill            none
  
.menu
    position        absolute
    top             0
    left            0

.button
    cursor          pointer
    font-family     sans-serif
    padding         1em
    &:hover 
        color       white
    color           #222
    user-select     none
    
.line
    stroke          #fff
    pointer-events  none
    stroke-linecap  round
    
.dot
    cursor          pointer
    stroke-width    0.1
    stroke          none
    fill            #fff
    &.linked    
        &:hover
            fill    #ff0
    &.neutral
        fill        #000
        stroke      #555
        
.pie
    pointer-events  none
    stroke          none
    fill            #000
    
.dbg
    stroke          #ff0
    stroke-width    1
    